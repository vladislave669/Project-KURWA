# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-super-secret-umbrella-corp-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///umbrella_movies.db
# For PostgreSQL (uncomment and configure when ready for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/umbrella_movies

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Security Configuration
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
REMEMBER_COOKIE_HTTPONLY=True

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Admin Configuration
ADMIN_EMAIL=admin@umbrella-movies.com
ADMIN_PASSWORD=change-this-password-in-production